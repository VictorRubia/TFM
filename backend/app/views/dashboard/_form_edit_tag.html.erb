<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Editar Etiqueta</h5>
  <button type="button" class="btn-close close-tags-modal" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<%= form_with(model: edit_tag, url: tags_repository_path(edit_tag), method: "patch") do |form| %>
  <div class="modal-body">
    <div class="mb-3">
      <%= form.label 'Nombre', style: "col-form-label" %>
      <%= form.text_field :name, :class => 'form-control', id: 'tag'+edit_tag.id.to_s+'name' %>
    </div>

    <div class="mb-3">
      <%= form.label 'Nombre que aparecerÃ¡ en el reloj', style: "col-form-label" %>
      <%= form.text_field :name_wearos, :class => 'form-control', id: 'tag'+edit_tag.id.to_s+'name_wearos' %>
    </div>

    <div class="mb-3">
      <%= form.label 'Tipo de etiqueta', style: "col-form-label" %>
      <%= form.select(:tags_type, [['Estado', 1], ['Contexto', 2]], {}, { :class => 'form-select', :selected => edit_tag.tags_type }) %>
    </div>

    <div class="form-group" data-uppy-edit="tags_repository[icon]" name="edit-upload-<%= edit_tag.id %>">
      <%= form.label 'Seleccione imagen o suba una personalizada', style: "col-form-label" %>
      <div data-behavior-edit-<%= edit_tag.id %>="uppy-trigger-edit"></div>
      <div class="uppy-picker-edit-<%= edit_tag.id %>"></div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <%= form.submit 'Editar', :class => 'btn btn-success' %>
  </div>
<% end %>